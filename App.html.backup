        const response = await fetch(`http://localhost:3000/api/admin/drivers/${driverId}/status`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ status: newStatus })
        });
        
        const result = await response.json();
        
        if (result.success) {
            const statusMessages = {
                'active': 'activado',
                'inactive': 'inactivado',
                'suspended': 'suspendido',
                'pending': 'marcado como pendiente'
            };
            NotificationService.success(`Conductor ${driverId} ${statusMessages[newStatus]}`);
