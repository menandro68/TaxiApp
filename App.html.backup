        function startRealTimeUpdates() {
            // Simular actualizaciones cada 30 segundos
            setInterval(async () => {
                if (appState.currentScreen === 'dashboard') {
                    try {
                        const newStats = await AdminAPI.getStats();
                        // Peque√±as variaciones aleatorias
                        newStats.activeDrivers.value += Math.floor(Math.random() * 5) - 2;
                        newStats.registeredUsers.value += Math.floor(Math.random() * 3);
                        newStats.completedTrips.value += Math.floor(Math.random() * 10);
                        
                        appState.stats = newStats;
                        renderStats(newStats);
                    } catch (error) {
                        console.error('Error updating real-time data:', error);
                    }
                }
            }, 30000);

            // Simular nuevas actividades cada 45 segundos
            setInterval(async () => {
                if (appState.currentScreen === 'dashboard') {
                    try {
                        const activities = await AdminAPI.getActivities();
                        // A√±adir nueva actividad simulada
                        const newActivity = {
                            id: Date.now(),
                            time: new Date().toLocaleTimeString('es-DO', { 
                                hour: '2-digit', 
                                minute: '2-digit' 
                            }),
                            activity: 'Nuevo viaje solicitado',
                            user: 'Usuario ' + Math.floor(Math.random() * 1000),
                            status: 'active',
                            details: 'Viaje en tiempo real'
                        };
                        
                        activities.unshift(newActivity);
                        appState.activities = activities.slice(0, 10); // Mantener solo los √∫ltimos 10
                        renderActivities(appState.activities);
                    } catch (error) {
                        console.error('Error updating activities:', error);
                    }
                }
            }, 45000);
        }

