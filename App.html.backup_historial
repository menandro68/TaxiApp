<script>

let appState = {}; 

// VERIFICACI√ìN DE AUTENTICACI√ìN
// (function checkAuth() {
//    const token = localStorage.getItem('adminToken');
//    if (!token) {
//        // No hay token, redirigir al login
//        window.location.href = 'login.html';
//        return;
//    }
