        function viewDriver(driverId) {
            const driver = appState.drivers.find(d => d.id === driverId);
            if (driver) {
                alert(`Detalles del conductor:\n\nNombre: ${driver.name}\nEmail: ${driver.email}\nTel√©fono: ${driver.phone}\nVeh√≠culo: ${driver.vehicle.make} ${driver.vehicle.model}\nPlaca: ${driver.vehicle.plate}\nCalificaci√≥n: ${driver.rating}\nViajes: ${driver.totalTrips}`);
            }
        }

        function editDriver(driverId) {
            NotificationService.info('Funci√≥n de edici√≥n pr√≥ximamente disponible');
        }

        function deleteDriver(driverId) {
            if (confirm('¬øEst√°s seguro de que quieres eliminar este conductor?')) {
                appState.drivers = appState.drivers.filter(d => d.id !== driverId);
                renderDrivers(appState.drivers);
                updateDriversBadge(appState.drivers.length);
                NotificationService.success('Conductor eliminado exitosamente');
            }
        }

        function viewUser(userId) {
            const user = appState.users.find(u => u.id === userId);
            if (user) {
                alert(`Detalles del usuario:\n\nNombre: ${user.name}\nEmail: ${user.email}\nTel√©fono: ${user.phone}\nCalificaci√≥n: ${user.rating}\nViajes: ${user.totalTrips}\nMiembro desde: ${formatDate(user.joinDate)}`);
            }
        }

        function editUser(userId) {
            NotificationService.info('Funci√≥n de edici√≥n pr√≥ximamente disponible');
        }

        function deleteUser(userId) {
            if (confirm('¬øEst√°s seguro de que quieres eliminar este usuario?')) {
                appState.users = appState.users.filter(u => u.id !== userId);
                renderUsers(appState.users);
                NotificationService.success('Usuario eliminado exitosamente');
            }
        }

        function viewTrip(tripId) {
            const trip = appState.trips.find(t => t.id === tripId);
            if (trip) {
                alert(`Detalles del viaje:\n\nID: ${trip.id}\nPasajero: ${trip.passenger}\nConductor: ${trip.driver}\nOrigen: ${trip.origin}\nDestino: ${trip.destination}\nPrecio: RD${trip.price}\nEstado: ${getStatusText(trip.status)}\nFecha: ${formatDateTime(trip.date)}\nDuraci√≥n: ${trip.duration}\nDistancia: ${trip.distance}`);
            }
        }

        function editTrip(tripId) {
            NotificationService.info('Funci√≥n de edici√≥n pr√≥ximamente disponible');
        }

        function viewActivity(activityId) {
            const activity = appState.activities.find(a => a.id === activityId);
            if (activity) {
                alert(`Detalles de la actividad:\n\nHora: ${activity.time}\nActividad: ${activity.activity}\nUsuario: ${activity.user}\nDetalles: ${activity.details}\nEstado: ${getStatusText(activity.status)}`);
            }
        }

        // ========================================
        // FUNCIONES DE FILTRADO Y B√öSQUEDA
        // ========================================
        
        function filterTrips(status) {
            appState.filters.trips = status;
            let filteredTrips = appState.trips;
            
            if (status !== 'all') {
                filteredTrips = appState.trips.filter(trip => trip.status === status);
            }
            
            renderTrips(filteredTrips);
            NotificationService.info(`Mostrando viajes: ${status === 'all' ? 'todos' : getStatusText(status)}`);
        }

        // Funci√≥n para mostrar el desglose detallado del viaje
function showTripDetails(tripId) {
    const trip = appState.trips.find(t => t.id === tripId);
    if (!trip) {
        NotificationService.error('Viaje no encontrado');
        return;
    }
    
    // Calcular desglose financiero
    const tarifaBase = 50;
    const costoPorKm = 15;
    const costoPorMinuto = 3;
    const distanciaKm = parseFloat(trip.distance) || 5.2;
    const tiempoMin = parseInt(trip.duration) || 18;
    
    const costoDistancia = distanciaKm * costoPorKm;
    const costoTiempo = tiempoMin * costoPorMinuto;
    const subtotal = tarifaBase + costoDistancia + costoTiempo;
    const comisionPlataforma = subtotal * 0.20;
    const gananciaConductor = subtotal - comisionPlataforma;
    
    // Generar HTML del desglose
    const detailsHTML = `
        <div class="trip-details-container">
            <!-- Informaci√≥n General -->
            <div class="detail-section">
                <h6 class="section-title">üìç Informaci√≥n del Viaje</h6>
                <table class="detail-table">
                    <tr><td><strong>ID Viaje:</strong></td><td>#${trip.id}</td></tr>
                    <tr><td><strong>Fecha:</strong></td><td>${formatDateTime(trip.date)}</td></tr>
                    <tr><td><strong>Pasajero:</strong></td><td>${trip.passenger}</td></tr>
                    <tr><td><strong>Conductor:</strong></td><td>${trip.driver}</td></tr>
                    <tr><td><strong>Origen:</strong></td><td>${trip.origin}</td></tr>
                    <tr><td><strong>Destino:</strong></td><td>${trip.destination}</td></tr>
                    <tr><td><strong>Estado:</strong></td><td><span class="status-badge status-${trip.status}">${getStatusText(trip.status)}</span></td></tr>
                </table>
            </div>
            
            <!-- M√©tricas del Viaje -->
            <div class="detail-section">
                <h6 class="section-title">üìä M√©tricas del Viaje</h6>
                <table class="detail-table">
                    <tr><td><strong>Distancia:</strong></td><td>${distanciaKm.toFixed(1)} km</td></tr>
                    <tr><td><strong>Duraci√≥n:</strong></td><td>${tiempoMin} minutos</td></tr>
                    <tr><td><strong>Tiempo de espera:</strong></td><td>3 minutos</td></tr>
                    <tr><td><strong>Velocidad promedio:</strong></td><td>${(distanciaKm / (tiempoMin/60)).toFixed(1)} km/h</td></tr>
                </table>
            </div>
            
            <!-- Desglose Financiero -->
            <div class="detail-section">
                <h6 class="section-title">üí∞ Desglose Financiero</h6>
                <table class="detail-table">
                    <tr><td><strong>Tarifa base:</strong></td><td>RD$ ${tarifaBase.toFixed(2)}</td></tr>
                    <tr><td><strong>Distancia (${distanciaKm.toFixed(1)} km √ó RD$${costoPorKm}):</strong></td><td>RD$ ${costoDistancia.toFixed(2)}</td></tr>
                    <tr><td><strong>Tiempo (${tiempoMin} min √ó RD$${costoPorMinuto}):</strong></td><td>RD$ ${costoTiempo.toFixed(2)}</td></tr>
                    <tr class="total-row"><td><strong>SUBTOTAL:</strong></td><td><strong>RD$ ${subtotal.toFixed(2)}</strong></td></tr>
                    <tr><td><strong>Comisi√≥n plataforma (20%):</strong></td><td style="color: red;">-RD$ ${comisionPlataforma.toFixed(2)}</td></tr>
                    <tr class="total-row success"><td><strong>Ganancia del conductor:</strong></td><td><strong>RD$ ${gananciaConductor.toFixed(2)}</strong></td></tr>
                </table>
            </div>
            
            <!-- M√©todo de Pago -->
            <div class="detail-section">
                <h6 class="section-title">üí≥ M√©todo de Pago</h6>
                <table class="detail-table">
                    <tr><td><strong>M√©todo:</strong></td><td>${trip.paymentMethod || 'Efectivo'}</td></tr>
                    <tr><td><strong>Propina:</strong></td><td>RD$ ${trip.tip || '0.00'}</td></tr>
                    <tr><td><strong>Total cobrado:</strong></td><td><strong>RD$ ${trip.price}</strong></td></tr>
                </table>
            </div>
        </div>
    `;
    
    document.getElementById('tripDetailsContent').innerHTML = detailsHTML;
    document.getElementById('tripDetailsModal').style.display = 'block';
}

function closeTripDetailsModal() {
    document.getElementById('tripDetailsModal').style.display = 'none';
}

function exportTripDetails() {
    NotificationService.success('Exportando desglose a PDF...');
    // Aqu√≠ se implementar√≠a la exportaci√≥n real a PDF
    setTimeout(() => {
        NotificationService.info('PDF generado exitosamente');
    }, 2000);
}

        function setupSearch() {
            const searchInput = document.getElementById('searchInput');
            let searchTimeout;
            
            searchInput.addEventListener('input', (e) => {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    const query = e.target.value.toLowerCase().trim();
                    performSearch(query);
                }, 300);
            });
        }

        function performSearch(query) {
            if (!query) {
                // Restaurar vista original
                loadScreenData(appState.currentScreen);
                return;
            }

            switch (appState.currentScreen) {
                case 'drivers':
                    const filteredDrivers = appState.drivers.filter(driver => 
                        driver.name.toLowerCase().includes(query) ||
                        driver.email.toLowerCase().includes(query) ||
                        driver.vehicle.plate.toLowerCase().includes(query)
                    );
                    renderDrivers(filteredDrivers);
                    break;
                
                case 'users':
                    const filteredUsers = appState.users.filter(user => 
                        user.name.toLowerCase().includes(query) ||
                        user.email.toLowerCase().includes(query) ||
                        user.phone.includes(query)
                    );
                    renderUsers(filteredUsers);
                    break;
                
                case 'trips':
                    const filteredTrips = appState.trips.filter(trip => 
                        trip.passenger.toLowerCase().includes(query) ||
                        trip.driver.toLowerCase().includes(query) ||
                        trip.origin.toLowerCase().includes(query) ||
                        trip.destination.toLowerCase().includes(query) ||
                        trip.id.toLowerCase().includes(query)
                    );
                    renderTrips(filteredTrips);
                    break;
            }
        }

        // ========================================
        // FUNCIONES DE GR√ÅFICOS Y FILTROS
        // ========================================
        
        async function changeChartPeriod(period) {
            try {
                appState.filters.dateRange = period;
                
                // Actualizar botones activos
                document.querySelectorAll('.filter-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                event.target.classList.add('active');
                
                // Cargar nuevos datos
                const chartData = await AdminAPI.getChartData(period);
                renderChart(chartData);
                
                NotificationService.info(`Gr√°fico actualizado: ${period === '7days' ? '7 d√≠as' : period === '30days' ? '30 d√≠as' : '90 d√≠as'}`);
                
            } catch (error) {
                console.error('Error changing chart period:', error);
                NotificationService.error('Error actualizando el gr√°fico');
            }
        }

        // ========================================
        // FUNCIONES DE EXPORTACI√ìN
        // ========================================
        
        function exportDrivers() {
            try {
                const csvContent = generateCSV(appState.drivers, [
                    'name', 'email', 'phone', 'license', 'vehicle.make', 'vehicle.model', 
                    'vehicle.year', 'vehicle.plate', 'rating', 'totalTrips', 'status'
                ]);
                downloadCSV(csvContent, 'conductores.csv');
                NotificationService.success('Datos de conductores exportados');
            } catch (error) {
                console.error('Error exporting drivers:', error);
                NotificationService.error('Error exportando datos');
            }
        }

        function exportUsers() {
            try {
                const csvContent = generateCSV(appState.users, [
                    'name', 'email', 'phone', 'rating', 'totalTrips', 'joinDate', 'status'
                ]);
                downloadCSV(csvContent, 'usuarios.csv');
                NotificationService.success('Datos de usuarios exportados');
            } catch (error) {
                console.error('Error exporting users:', error);
                NotificationService.error('Error exportando datos');
            }
        }

        function exportTrips() {
            try {
                const csvContent = generateCSV(appState.trips, [
                    'id', 'passenger', 'driver', 'origin', 'destination', 'price', 'status', 'date', 'duration', 'distance'
                ]);
                downloadCSV(csvContent, 'viajes.csv');
                NotificationService.success('Datos de viajes exportados');
            } catch (error) {
                console.error('Error exporting trips:', error);
                NotificationService.error('Error exportando datos');
            }
        }

        function generateCSV(data, columns) {
            const headers = columns.join(',');
            const rows = data.map(item => {
                return columns.map(column => {
                    const value = getNestedValue(item, column);
                    return `"${value || ''}"`;
                }).join(',');
            });
            return [headers, ...rows].join('\n');
        }

        function getNestedValue(obj, path) {
            return path.split('.').reduce((current, key) => current?.[key], obj);
        }

        function downloadCSV(content, filename) {
            const blob = new Blob([content], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', filename);
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        // ========================================
        // FUNCIONES DE ACTUALIZACI√ìN
        // ========================================
        
        async function refreshActivity() {
            try {
                const activities = await AdminAPI.getActivities();
                appState.activities = activities;
                renderActivities(activities);
                NotificationService.success('Actividad actualizada');
            } catch (error) {
                console.error('Error refreshing activity:', error);
                NotificationService.error('Error actualizando actividad');
            }
        }

        // ========================================
        // FUNCIONES DE UTILIDAD
        // ========================================
        
        function getStatusText(status) {
            const statusMap = {
                active: 'Activo',
                inactive: 'Inactivo',
                pending: 'Pendiente',
                completed: 'Completado',
                cancelled: 'Cancelado',
                suspended: 'Suspendido'
            };
            return statusMap[status] || status;
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('es-DO', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }

        function formatDateTime(dateString) {
            const date = new Date(dateString);
            return date.toLocaleString('es-DO', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        // ========================================
        // FUNCIONES DE INTERFAZ
        // ========================================
        
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');
            
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('expanded');
        }

        function showNotifications() {
            NotificationService.info('Panel de notificaciones pr√≥ximamente disponible');
        }

        function showUserMenu() {
            NotificationService.info('Men√∫ de usuario pr√≥ximamente disponible');
        }

        // ========================================
        // CONFIGURACI√ìN DE EVENTOS
        // ========================================
        
        function setupEventListeners() {
            // Navegaci√≥n del sidebar
            document.querySelectorAll('.nav-item').forEach(item => {
                item.addEventListener('click', (e) => {
                    e.preventDefault();
                    const screen = item.getAttribute('data-screen');
                    if (screen) {
                        switchScreen(screen);
                    }
                });
            });

            // Cerrar modales al hacer clic fuera
            document.querySelectorAll('.modal-overlay').forEach(overlay => {
                overlay.addEventListener('click', (e) => {
                    if (e.target === overlay) {
                        const modalId = overlay.id;
                        closeModal(modalId);
                    }
                });
            });

            // Cerrar modales con ESC
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    const activeModal = document.querySelector('.modal-overlay.active');
                    if (activeModal) {
                        closeModal(activeModal.id);
                    }
                }
            });

            // Configurar b√∫squeda
            setupSearch();

            // Responsive sidebar
            if (window.innerWidth <= 768) {
                document.getElementById('sidebar').classList.add('collapsed');
                document.getElementById('mainContent').classList.add('expanded');
            }

            // Detectar cambios de tama√±o de ventana
            window.addEventListener('resize', () => {
                if (window.innerWidth <= 768) {
                    document.getElementById('sidebar').classList.add('collapsed');
                    document.getElementById('mainContent').classList.add('expanded');
                } else {
                    document.getElementById('sidebar').classList.remove('collapsed');
                    document.getElementById('mainContent').classList.remove('expanded');
                }
            });
        }

        // ========================================
        // SIMULACI√ìN DE ACTUALIZACIONES EN TIEMPO REAL
        // ========================================
        
        function startRealTimeUpdates() {
            // Simular actualizaciones cada 30 segundos
            setInterval(async () => {
                if (appState.currentScreen === 'dashboard') {
                    try {
                        const newStats = await AdminAPI.getStats();
                        // Peque√±as variaciones aleatorias
                        newStats.activeDrivers.value += Math.floor(Math.random() * 5) - 2;
                        newStats.registeredUsers.value += Math.floor(Math.random() * 3);
                        newStats.completedTrips.value += Math.floor(Math.random() * 10);
                        
                        appState.stats = newStats;
                        renderStats(newStats);
                    } catch (error) {
                        console.error('Error updating real-time data:', error);
                    }
                }
            }, 30000);

            // Simular nuevas actividades cada 45 segundos
            setInterval(async () => {
                if (appState.currentScreen === 'dashboard') {
                    try {
                        const activities = await AdminAPI.getActivities();
                        // A√±adir nueva actividad simulada
                        const newActivity = {
                            id: Date.now(),
                            time: new Date().toLocaleTimeString('es-DO', { 
                                hour: '2-digit', 
                                minute: '2-digit' 
                            }),
                            activity: 'Nuevo viaje solicitado',
                            user: 'Usuario ' + Math.floor(Math.random() * 1000),
                            status: 'active',
                            details: 'Viaje en tiempo real'
                        };
                        
                        activities.unshift(newActivity);
                        appState.activities = activities.slice(0, 10); // Mantener solo los √∫ltimos 10
                        renderActivities(appState.activities);
                    } catch (error) {
                        console.error('Error updating activities:', error);
                    }
                }
            }, 45000);
        }

        // ========================================
        // INICIALIZACI√ìN DE LA APLICACI√ìN
        // ========================================
        
        document.addEventListener('DOMContentLoaded', async () => {
             
             try {

                // ==========================================
        // SISTEMA DE NOTIFICACIONES EN TIEMPO REAL
        // ==========================================
        
        // Conectar con Socket.IO
        const socket = io('http://localhost:3000');
        
        socket.on('connect', () => {
            console.log('üîå Conectado al servidor de notificaciones');
            socket.emit('join-admin');
        });
        
        // Escuchar nuevos viajes
        socket.on('new-trip', (tripData) => {
            console.log('üöñ NUEVO VIAJE RECIBIDO:', tripData);
            
            // Mostrar notificaci√≥n visual
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 80px;
                right: 20px;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                padding: 20px;
                border-radius: 12px;
                box-shadow: 0 10px 40px rgba(0,0,0,0.2);
                z-index: 9999;
                animation: slideIn 0.5s ease;
                min-width: 350px;
            `;
            
            notification.innerHTML = `
                <div style="display: flex; align-items: center; margin-bottom: 10px;">
                    <span style="font-size: 24px; margin-right: 10px;">üö®</span>
                    <strong style="font-size: 18px;">¬°Nuevo Viaje!</strong>
                </div>
                <div style="margin-left: 34px;">
                    <div>üë§ ${tripData.user}</div>
                    <div>üìç ${tripData.origin}</div>
                    <div>üìå ${tripData.destination}</div>
                    <div style="font-size: 12px; opacity: 0.9;">
                        üïê ${new Date(tripData.timestamp).toLocaleTimeString()}
                    </div>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            // Auto-ocultar despu√©s de 8 segundos
            setTimeout(() => {
                notification.style.opacity = '0';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 500);
            }, 8000);
        });
        
        socket.on('disconnect', () => {
            console.log('‚ùå Desconectado del servidor');
        });
                console.log('üöÄ Inicializando Panel de Administraci√≥n TaxiApp...');
                
                // Configurar eventos
                setupEventListeners();
                
                // Cargar datos iniciales
                await loadDashboard();
                
                // Iniciar actualizaciones en tiempo real
                startRealTimeUpdates();
                
                // Mostrar notificaci√≥n de bienvenida
                setTimeout(() => {
                    NotificationService.success('Panel de administraci√≥n cargado exitosamente');
                }, 1000);
                
                console.log('‚úÖ Panel de administraci√≥n inicializado correctamente');
                
            } catch (error) {
                console.error('‚ùå Error inicializando la aplicaci√≥n:', error);
                NotificationService.error('Error inicializando la aplicaci√≥n');
            }
        });

        // ========================================
        // FUNCIONES ADICIONALES PARA DESARROLLO
        // ========================================
        
        // Funci√≥n para generar datos de prueba adicionales
        
        function generateMockData() {
            console.log('Generando datos de prueba...');
            
            // Generar conductores adicionales
            for (let i = 4; i <= 20; i++) {
                const mockDriver = {
                    id: i,
                    name: `Conductor ${i}`,
                    email: `conductor${i}@email.com`,
                    phone: `+1 (809) 555-${String(i).padStart(4, '0')}`,
                    license: `DL${String(i).padStart(9, '0')}`,
                    vehicle: {
                        make: ['Toyota', 'Honda', 'Nissan', 'Hyundai'][Math.floor(Math.random() * 4)],
                        model: ['Corolla', 'Civic', 'Sentra', 'Elantra'][Math.floor(Math.random() * 4)],
                        year: 2018 + Math.floor(Math.random() * 6),
                        plate: `${String.fromCharCode(65 + Math.floor(Math.random() * 26))}${String(Math.floor(Math.random() * 900) + 100)}-${String(Math.floor(Math.random() * 900) + 100)}`,
                        color: ['Blanco', 'Gris', 'Negro', 'Azul', 'Rojo'][Math.floor(Math.random() * 5)]
                    },
                    rating: 4.0 + Math.random(),
                    totalTrips: Math.floor(Math.random() * 1000) + 100,
                    status: ['active', 'inactive', 'pending'][Math.floor(Math.random() * 3)],
                    joinDate: `2023-${String(Math.floor(Math.random() * 12) + 1).padStart(2, '0')}-${String(Math.floor(Math.random() * 28) + 1).padStart(2, '0')}`
                };
                appState.drivers.push(mockDriver);
            }
            
            console.log(`‚úÖ Generados ${appState.drivers.length} conductores de prueba`);
            renderDrivers(appState.drivers);
            updateDriversBadge(appState.drivers.length);
        }

        // Funci√≥n para limpiar datos (√∫til para desarrollo)
        function clearAllData() {
            if (confirm('¬øEst√°s seguro de que quieres limpiar todos los datos? Esta acci√≥n no se puede deshacer.')) {
                appState.drivers = [];
                appState.users = [];
                appState.trips = [];
                appState.activities = [];
                
                // Recargar vistas
                if (appState.currentScreen === 'drivers') renderDrivers([]);
                if (appState.currentScreen === 'users') renderUsers([]);
                if (appState.currentScreen === 'trips') renderTrips([]);
                
                updateDriversBadge(0);
                NotificationService.success('Todos los datos han sido limpiados');
            }
        }

        // Hacer funciones disponibles globalmente para debugging
        window.AdminApp = {
            state: appState,
            generateMockData,
            clearAllData,
            NotificationService,
            AdminAPI
        };

        console.log('üîß Panel de Administraci√≥n TaxiApp v1.0.0');
        console.log('üí° Usa AdminApp.generateMockData() para generar datos de prueba');
        console.log('üóëÔ∏è Usa AdminApp.clearAllData() para limpiar todos los datos');

     // Funci√≥n para cerrar sesi√≥n
   
function logout() {
  
    localStorage.removeItem('adminToken');
    localStorage.removeItem('adminData');
    localStorage.removeItem('adminId');
    window.location.href = 'index.html';
}

// Mostrar opci√≥n de administradores solo para super_admin
const userData2 = JSON.parse(localStorage.getItem('adminData') || '{}');
if (userData2.role !== 'super_admin') {
    const adminMenu = document.getElementById('adminMenu');
    if (adminMenu) adminMenu.style.display = 'none';
}

