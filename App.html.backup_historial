// Mostrar info del admin en el avatar
const adminData = JSON.parse(localStorage.getItem('adminData') || '{}');
if (adminData.username) {
    const avatar = document.querySelector('.admin-avatar');
    if (avatar) {
        avatar.textContent = adminData.username.substring(0, 2).toUpperCase();
        avatar.title = `Admin: ${adminData.username}`;
    }
}

// Funci√≥n para cerrar sesi√≥n
function logout() {
    localStorage.removeItem('adminToken');
    localStorage.removeItem('adminData');
    localStorage.removeItem('adminId');
    window.location.href = 'index.html';
}

// Mostrar opci√≥n de administradores solo para super_admin
const userData = JSON.parse(localStorage.getItem('adminData') || '{}');
if (userData.role !== 'super_admin') {
    const adminMenu = document.getElementById('adminMenu');
    if (adminMenu) adminMenu.style.display = 'none';
}

// CONFIGURACI√ìN DE API REAL - AGREGADO PARA CONECTAR CON BACKEND
const API_URL = 'http://localhost:3000/api';
const USE_REAL_API = true;

async function fetchAPI(endpoint, options = {}) {
    if (!USE_REAL_API) return null;
    try {
        const response = await fetch(API_URL + endpoint, {
            ...options,
            headers: {
                'Content-Type': 'application/json',
                ...options.headers
            }
        });
        if (!response.ok) throw new Error(`Error: ${response.status}`);
        return await response.json();
    } catch (error) {
        console.error('Error de API:', error);
        return null;
    }
}

// El resto del c√≥digo original contin√∫a aqu√≠...
        // ========================================
        // ESTADO GLOBAL DE LA APLICACI√ìN
        // ========================================
        
        class AdminAppState {
            constructor() {
                this.currentScreen = 'dashboard';
                this.stats = {};
                this.drivers = [];
                this.users = [];
                this.trips = [];
                this.activities = [];
                this.notifications = [];
                this.charts = {};
                this.filters = {
                    trips: 'all',
                    dateRange: '7days'
                };
            }
        }

        appState = new AdminAppState();

        // ========================================
        // SERVICIOS DE API (SIMULADOS)
        // ========================================
        
        class AdminAPI {
static async getStats() {
    // Primero intentar con API real
    const apiData = await fetchAPI('/admin/stats');
    if (apiData) {
        return {
            activeDrivers: {
                value: apiData.activeDrivers || apiData.totalDrivers || 0,
                change: 12,
                type: 'positive'
            },
            registeredUsers: {
                value: apiData.totalUsers || 0,
                change: 8,
                type: 'positive'
            },
            completedTrips: {
                value: apiData.totalTrips || 0,
                change: 15,
                type: 'positive'
            },
            monthlyRevenue: {
                value: apiData.totalRevenue || 0,
                change: 22,
                type: 'positive'
            }
        };
    }
    
    // Si falla, usar datos simulados
    await this.delay(500);
    return {
        activeDrivers: { value: 247, change: 12, type: 'positive' },
        registeredUsers: { value: 1842, change: 8, type: 'positive' },
        completedTrips: { value: 3456, change: 15, type: 'positive' },
        monthlyRevenue: { value: 125430, change: 22, type: 'positive' }
    };
}

           static async getDrivers() {
    // Primero intentar con API real
    const apiData = await fetchAPI('/drivers');
    if (apiData && apiData.drivers) {
        return apiData.drivers.map(driver => ({
            id: driver.id,
            name: driver.name,
            email: driver.email,
            phone: driver.phone,
            license: driver.licenseNumber || 'N/A',
            vehicle: {
                make: driver.vehicleMake || 'Sin veh√≠culo',
                model: driver.vehicleModel || '',
                year: driver.vehicleYear || 2020,
                plate: driver.vehiclePlate || 'N/A',
                color: driver.vehicleColor || 'N/A'
            },
            rating: driver.rating || 5.0,
            totalTrips: driver.totalTrips || 0,
            status: driver.status || 'pending',
            joinDate: driver.createdAt || new Date().toISOString()
        }));
    }
    
    // Si falla, usar datos simulados
    await this.delay(300);
    return [/* datos simulados anteriores */];
}

            static async getUsers() {
    // Primero intentar con API real
    const apiData = await fetchAPI('/users');
    if (apiData && apiData.users) {
        return apiData.users.map(user => ({
            id: user.id,
            name: user.name,
            email: user.email,
            phone: user.phone,
            rating: user.rating || 5.0,
            totalTrips: user.totalTrips || 0,
            joinDate: user.createdAt || new Date().toISOString(),
            status: user.status || 'active'
        }));
    }
    
    // Si falla, usar datos simulados
    await this.delay(300);
    return [/* datos simulados anteriores */];
}

            static async getTrips() {
    // Primero intentar con API real
    const apiData = await fetchAPI('/trips');
    if (apiData && apiData.trips) {
        return apiData.trips.map(trip => ({
            id: trip.id,
            passenger: trip.userName || 'Usuario',
            driver: trip.driverName || 'Conductor',
            origin: trip.pickupLocation || 'Origen',
            destination: trip.dropoffLocation || 'Destino',
            price: trip.fare || 0,
            status: trip.status || 'pending',
            date: trip.createdAt || new Date().toISOString(),
            duration: trip.duration || 'N/A',
            distance: trip.distance || 'N/A'
        }));
    }
    
    // Si falla, usar datos simulados
    await this.delay(400);
    return [/* datos simulados anteriores */];
}

            static async getActivities() {
                await this.delay(200);
                return [
                    {
                        id: 1,
                        time: '15:32',
                        activity: 'Viaje completado',
                        user: 'Mar√≠a Gonz√°lez',
                        status: 'completed',
                        details: 'Viaje de Sambil a Zona Colonial'
                    },
                    {
