                    },
                    {
                        id: 4,
                        time: '15:20',
                        activity: 'Usuario registrado',
                        user: 'Carmen Silva',
                        status: 'completed',
                        details: 'Nuevo usuario en la plataforma'
                    }
                ];
            }

            static async getChartData(period = '7days') {
                await this.delay(300);
                const data = {
                    '7days': {
                        labels: ['Lun', 'Mar', 'Mi√©', 'Jue', 'Vie', 'S√°b', 'Dom'],
                        values: [45, 52, 48, 61, 55, 67, 58]
                    },
                    '30days': {
                        labels: Array.from({length: 30}, (_, i) => i + 1),
                        values: Array.from({length: 30}, () => Math.floor(Math.random() * 100) + 20)
                    },
                    '90days': {
                        labels: Array.from({length: 90}, (_, i) => i + 1),
                        values: Array.from({length: 90}, () => Math.floor(Math.random() * 120) + 30)
                    }
                };
                return data[period];
            }

            static delay(ms) {
                return new Promise(resolve => setTimeout(resolve, ms));
            }

            static async saveDriver(driverData) {
                await this.delay(500);
                const newDriver = {
                    id: Date.now(),
                    ...driverData,
                    rating: 5.0,
                    totalTrips: 0,
                    joinDate: new Date().toISOString().split('T')[0]
                };
                return newDriver;
            }

            static async saveUser(userData) {
                await this.delay(500);
                const newUser = {
                    id: Date.now(),
                    ...userData,
                    rating: 5.0,
                    totalTrips: 0,
                    joinDate: new Date().toISOString().split('T')[0]
                };
                return newUser;
            }
        }

        // ========================================
        // SISTEMA DE NOTIFICACIONES
        // ========================================
        
        class NotificationService {
            static show(message, type = 'info', duration = 3000) {
                const notification = document.createElement('div');
                notification.className = `notification ${type}`;
                notification.textContent = message;
                
                document.body.appendChild(notification);
                
                // Mostrar notificaci√≥n
                setTimeout(() => {
                    notification.classList.add('show');
                }, 100);
                
                // Ocultar y remover notificaci√≥n
                setTimeout(() => {
                    notification.classList.remove('show');
                    setTimeout(() => {
                        document.body.removeChild(notification);
                    }, 300);
                }, duration);
            }

            static success(message) {
                this.show(message, 'success');
            }

            static error(message) {
                this.show(message, 'error');
            }

            static info(message) {
                this.show(message, 'info');
            }
        }

        // ========================================
        // GESTI√ìN DE PANTALLAS Y NAVEGACI√ìN
        // ========================================
        
        function switchScreen(screenName) {
            // Actualizar estado
            appState.currentScreen = screenName;
            
            // Ocultar todas las pantallas
            document.querySelectorAll('.screen').forEach(screen => {
                screen.classList.remove('active');
  

            });


            // Cargar m√≥dulo de documentos cuando se seleccione
if (screenName === 'documents') {
    const documentsContainer = document.getElementById('documents');
    documentsContainer.innerHTML = DocumentsModule.getDocumentsHTML();
    DocumentsModule.init();
    DocumentsModule.loadDocuments();
}
    

   // Cargar m√≥dulo de monitoreo de viajes
if (screenName === 'trips-monitor') {
    const container = document.getElementById('trips-monitor');
    container.innerHTML = TripsMonitorModule.getHTML();
    TripsMonitorModule.init();
}

// Cargar m√≥dulo de suspensiones
if (screenName === 'suspensions') {
    if (typeof SuspensionsModule !== 'undefined') {
        SuspensionsModule.render();
    }
}


// Cargar m√≥dulo de soporte
if (screenName === 'support') {
    const container = document.getElementById('support');
    container.innerHTML = SupportModule.getHTML();
    SupportModule.init();
}

// Cargar m√≥dulo de comunicados
if (screenName === 'communications') {
    const container = document.getElementById('communications');
    container.innerHTML = CommunicationsModule.showCommunicationsPanel();
    CommunicationsModule.injectStyles();
    CommunicationsModule.init();
}

// Cargar m√≥dulo de finanzas
if (screenName === 'finances') {
    const container = document.getElementById('finances');
    container.innerHTML = FinancesModule.getHTML();
    FinancesModule.init();
}


// Cargar m√≥dulo de reportes
if (screenName === 'reports') {
    const container = document.getElementById('reports');
    container.innerHTML = ReportsModule.getHTML();
    ReportsModule.init();
}

// Cargar m√≥dulo de tarifas
if (screenName === 'pricing') {
    const container = document.getElementById('pricing');
    container.innerHTML = PricingModule.getHTML();
    PricingModule.init();
}

// Mostrar pantalla seleccionada
            document.getElementById(screenName).classList.add('active');
            
            // Actualizar navegaci√≥n
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            document.querySelector(`[data-screen="${screenName}"]`).classList.add('active');
            
            // Actualizar t√≠tulo
            const titles = {
                dashboard: 'Dashboard',
                analytics: 'Anal√≠ticas',
                drivers: 'Conductores',
                suspensions: 'Suspensiones',
                communications: 'Comunicados Masivos',
                users: 'Usuarios',
                trips: 'Viajes',
                vehicles: 'Veh√≠culos',
                earnings: 'Ganancias',
                payments: 'Pagos',
                settings: 'Configuraci√≥n',
                support: 'Soporte'
            };
            document.getElementById('pageTitle').textContent = titles[screenName] || 'Panel de Control';
            
            // Cargar datos espec√≠ficos de la pantalla
            loadScreenData(screenName);
        }

async function loadScreenData(screenName) {
    try {
        // Peque√±o retraso para asegurar que el DOM est√© listo
        await new Promise(resolve => setTimeout(resolve, 10));
        
        switch (screenName) {
            case 'dashboard':
                await loadDashboard();
                break;
          case 'drivers':
    if (typeof loadDriversWithPagination !== 'undefined') {
        await loadDriversWithPagination();
    } else {
        await loadDrivers();
    }
    break;
            case 'users':
                await loadUsersWithPagination();
                break;
            case 'trips':
                await loadTripsWithPagination();
                break;

                  case 'reports':
                // No necesita carga adicional, el m√≥dulo se encarga
                break;
            // resto de casos...
        }
    } catch (error) {
        console.error(`Error loading ${screenName}:`, error);
    }
}

        // ========================================
        // CARGA DE DATOS DEL DASHBOARD
        // ========================================
        
           // NUEVO: Funci√≥n para actualizar m√©tricas en tiempo real
async function updateDashboardMetrics() {
    try {
        const response = await fetch('http://localhost:3000/api/admin/stats');
        const data = await response.json();
        
        // Buscar y actualizar cada m√©trica
        const driverCard = document.querySelector('[data-metric="drivers"]');
        const userCard = document.querySelector('[data-metric="users"]');
        const tripCard = document.querySelector('[data-metric="trips"]');
        const revenueCard = document.querySelector('[data-metric="revenue"]');
        
        if (driverCard) {
            driverCard.querySelector('.metric-value').textContent = data.totalDrivers || 0;
        }
        if (userCard) {
            userCard.querySelector('.metric-value').textContent = data.totalUsers || 0;
        }
        if (tripCard) {
            tripCard.querySelector('.metric-value').textContent = data.totalTrips || 0;
        }
        if (revenueCard) {
            revenueCard.querySelector('.metric-value').textContent = 
                `RD$${(data.totalRevenue || 0).toLocaleString()}`;
        }
        
        console.log('üìä Dashboard actualizado:', new Date().toLocaleTimeString());
    } catch (error) {
        console.error('Error actualizando dashboard:', error);
    }
}
// Actualizar cada 5 segundos
//setInterval(updateDashboardMetrics, 5000);

// Funci√≥n para actualizar posiciones y estados de conductores

// ==========================================
// SISTEMA DE ALERTAS DEL DASHBOARD
// ==========================================
function loadSystemAlerts() {
    fetch('/api/alerts/active')
        .then(response => response.json())
        .then(data => {
            const container = document.getElementById('alertsContainer');
            
            if (data.alerts && data.alerts.length > 0) {
                container.innerHTML = data.alerts.map(alert => `
                    <div style="padding: 12px; margin-bottom: 8px; border-left: 4px solid ${
                        alert.type === 'critical' ? '#ef4444' : 
                        alert.type === 'high' ? '#f59e0b' : 
                        alert.type === 'warning' ? '#eab308' : '#3b82f6'
                    }; background: #f9fafb; border-radius: 4px;">
                        <div style="font-weight: bold; margin-bottom: 4px;">
                            ${alert.type === 'critical' ? 'üî¥' : 
                              alert.type === 'high' ? 'üü†' : 
                              alert.type === 'warning' ? 'üü°' : 'üîµ'} 
                            ${alert.title}
                        </div>
                        <div style="color: #4b5563; font-size: 0.875rem;">
                            ${alert.message}
                        </div>
                        <div style="color: #9ca3af; font-size: 0.75rem; margin-top: 4px;">
                            ${new Date(alert.timestamp).toLocaleTimeString()}
                        </div>
                    </div>
                `).join('');
            } else {
                container.innerHTML = `
                    <div style="padding: 20px; text-align: center; color: #666;">
                        <p>‚úÖ No hay alertas activas</p>
                        <p style="font-size: 0.875rem; color: #9ca3af;">
                            El sistema est√° funcionando correctamente
                        </p>
                    </div>
                `;
            }
        })
        .catch(error => {
            console.error('Error cargando alertas:', error);
        });
}

// Cargar alertas al inicio
loadSystemAlerts();

// Actualizar alertas cada 30 segundos
setInterval(loadSystemAlerts, 30000);

async function updateDriverPositions() {
    try {
        const response = await fetch('http://localhost:3000/api/admin/drivers/positions');
        const data = await response.json();
        
        if (data.success) {
            // Actualizar contador de conductores activos
            const activeCount = data.drivers.length;
            console.log(`üöó Conductores activos: ${activeCount}`);
            
            // Actualizar panel visual de estados
            const panel = document.getElementById('driverStatusPanel');
            if (panel) {
                panel.innerHTML = data.drivers.map(driver => `
                    <div style="
                        padding: 12px;
                        border-radius: 8px;
                        border: 1px solid #e5e7eb;
                        background: ${getStatusColor(driver.status)};
                        transition: all 0.3s;
                    ">
                        <div style="font-weight: 600; color: #1f2937;">
                            ${driver.name}
                        </div>
                        <div style="font-size: 0.75rem; color: #6b7280; margin: 4px 0;">
                            ${driver.vehicle_plate} ‚Ä¢ ${driver.vehicle_model || 'Sin modelo'}
                        </div>
                        <div style="
                            display: inline-block;
                            padding: 2px 8px;
                            border-radius: 12px;
                            font-size: 0.75rem;
                            font-weight: 600;
                            background: white;
                            color: ${getStatusTextColor(driver.status)};
                            margin-top: 8px;
                        ">
                            ${getStatusLabel(driver.status)}
                        </div>
                        ${driver.status === 'pending' ? `
                            <div style="margin-top: 12px; display: flex; gap: 8px;">
                               <button onclick="ApprovalWizard.openWizard(${driver.id})" style="
                                    flex: 1;
                                    background: #22c55e;
                                    color: white;
                                    border: none;
                                    padding: 6px 12px;
                                    border-radius: 6px;
                                    cursor: pointer;
                                    font-size: 12px;
                                    font-weight: 600;
                               ">üßô Proceso de Aprobaci√≥n</button>
                                <button onclick="rejectDriver(${driver.id})" style="
                                    flex: 1;
                                    background: #ef4444;
                                    color: white;
                                    border: none;
                                    padding: 6px 12px;
                                    border-radius: 6px;
                                    cursor: pointer;
                                    font-size: 12px;
                                    font-weight: 600;
                                ">‚úó Rechazar</button>
                            </div>
                        ` : ''}
                    </div>
                `).join('');
            }
            
            // Mostrar info en consola
            data.drivers.forEach(driver => {
                console.log(`  - ${driver.name} (${driver.status}) - ${driver.vehicle_plate}`);
            });
        }
    } catch (error) {
        console.error('Error obteniendo posiciones:', error);
    }
}

// Funciones auxiliares para colores y etiquetas
function getStatusColor(status) {
    const colors = {
        'online': '#dcfce7',  // Verde claro
        'busy': '#fef3c7',    // Amarillo claro
        'offline': '#f3f4f6', // Gris claro
        'inactive': '#fee2e2' // Rojo claro
    };
    return colors[status] || '#f3f4f6';
}

function getStatusTextColor(status) {
    const colors = {
        'online': '#166534',   // Verde oscuro
        'busy': '#92400e',     // Amarillo oscuro
        'offline': '#6b7280',  // Gris
        'inactive': '#991b1b'  // Rojo oscuro
    };
    return colors[status] || '#6b7280';
}

function getStatusLabel(status) {
    const labels = {
        'online': 'üü¢ En l√≠nea',
        'busy': 'üü° Ocupado',
        'offline': '‚ö´ Desconectado',
        'inactive': 'üî¥ Inactivo',
        'active': 'üü¢ Activo',
        'pending': 'üü† Pendiente'
    };
    return labels[status] || status;
}

